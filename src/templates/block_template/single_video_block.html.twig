{% if form is defined and form %}
    {{ form_row(form.file) }}
{% else %}
    <video
            src="/{{ block.file.path }}"
            {{ block.autoplay ? 'autoplay' }}
            {{ block.muted ? 'muted' }}
            {{ block.loop ? 'loop' }}
            {{ block.controls ? 'controls' }}
            class="w-100"
    >
        {{ 'simsy_cms.errors.video_element_unsupported'|trans }}
    </video>
{% endif %}