<div class="row {{ form is defined ? 'mx-0 px-0' }}">
    <div class="col-md-6 {{ form is defined ? 'ps-0' }}">
        {% if form is defined %}
            {{ form_row(form.leftContent) }}
        {% else %}
            {{ block.leftContent }}
        {% endif %}
    </div>
    <div class="col-md-6 {{ form is defined ? 'pe-0' }}">
        {% if form is defined %}
            {{ form_row(form.rightContent) }}
        {% else %}
            {{ block.rightContent }}
        {% endif %}
    </div>
</div>