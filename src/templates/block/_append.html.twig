{% if oldBlock %}
    {% include '@SimsyCMS/block/_show.html.twig' with { block: oldBlock, blockConfig: oldBlockConfig } %}
{% endif %}

<turbo-stream action="before" target="{{ oldBlock ? 'section-' ~ oldBlock.section.id ~ '-block-show-frame-' ~ oldBlock.id : 'section-' ~ newBlock.section.id ~ '-block-select-frame-0' }}">
